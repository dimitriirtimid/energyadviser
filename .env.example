# Node Environment
NODE_ENV=development
PORT=3000

# EnergyID OAuth Configuration (not needed in DEMO_MODE)
ENERGYID_CLIENT_ID=your_client_id_here
ENERGYID_CLIENT_SECRET=your_client_secret_here
ENERGYID_AUTH_URL=https://oauth.energyid.eu/oauth/authorize
ENERGYID_TOKEN_URL=https://oauth.energyid.eu/oauth/token
ENERGYID_API_URL=https://api.energyid.eu/api
ENERGYID_CALLBACK_URL=http://localhost:3000/api/auth/callback

# Session
SESSION_SECRET=your_session_secret_here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Demo Mode Configuration
# Set to 'true' to enable demo mode with sample data
# When enabled, the /api/auth/demo-login endpoint will be available
# and all energy data will be served from sample-data.json
# This allows testing and demoing without OAuth and real data connections
DEMO_MODE=true

# Azure App Service
WEBSITE_NODE_DEFAULT_VERSION=18.17.0
